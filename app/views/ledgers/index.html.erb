<p id="notice"><%= notice %></p>

<h1>Ledgers</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Payer</th>
      <th>Check details</th>
      <th>Department</th>
      <th>Amount</th>
      <th>Cobra</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ledgers.each do |ledger| %>
      <tr>
        <td><%= ledger.date %></td>
        <td><%= ledger.payer %></td>
        <td><%= ledger.check_details %></td>
        <td><%= ledger.department %></td>
        <td><%= ledger.amount %></td>
        <td><%= ledger.cobra %></td>
        <td><%= ledger.notes %></td>
        <td><%= link_to 'Show', ledger %></td>
        <td><%= link_to 'Edit', edit_ledger_path(ledger) %></td>
        <td><%= link_to 'Destroy', ledger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

